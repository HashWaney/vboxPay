<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_d3d3d3"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="99dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="25dp"
        android:background="@color/colorWhite"
        android:layout_alignParentBottom="true">
        <ImageView
            android:id="@+id/shop_list_select_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:padding="20dp"
            android:src="@drawable/add_circle_btn_gray"/>

        <LinearLayout
            android:id="@+id/shop_list_shop_num_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="28dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/shop_list_reduce_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/common_cross_red"/>
            <TextView
                android:id="@+id/shop_list_shop_num_text"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:background="@drawable/shop_num_bg"
                android:gravity="center"
                android:text="2"
                android:textColor="@color/colorBlack"
                android:textSize="20dp"/>
            <ImageView
                android:id="@+id/shop_list_add_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:padding="15dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/common_add_green"/>
        </LinearLayout>

        <TextView
            android:id="@+id/shop_list_shop_price_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:layout_toLeftOf="@+id/shop_list_shop_num_layout"
            android:gravity="right"
            android:text="￥ 0"
            android:textSize="25dp"
            android:textColor="@color/color_e10112"/>

        <RelativeLayout
            android:id="@+id/shop_list_name_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/shop_list_select_img"
            android:layout_toLeftOf="@+id/shop_list_shop_price_text">
            <ImageView
                android:id="@+id/shop_list_commodity_img"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="1dp"
                android:background="@drawable/shop_default_bg"/>

            <TextView
                android:id="@+id/shop_list_shop_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/shop_list_commodity_img"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:gravity="left"
                android:text="8元牛肉汤"
                android:textSize="22dp"
                android:textColor="@color/colorBlack"/>
        </RelativeLayout>
    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="9dp"
        android:background="@color/color_e6e6e6"/>
</LinearLayout>